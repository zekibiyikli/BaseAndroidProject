<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.android.baseapp.ui.fragment.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_userDetailFragment"
            app:destination="@id/userDetailFragment"
            app:enterAnim="@anim/anim_enter"
            app:exitAnim="@anim/anim_exit"
            app:popEnterAnim="@anim/anim_popenter"
            app:popExitAnim="@anim/anim_popexit" />
    </fragment>

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.android.baseapp.ui.fragment.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" >
        <action
            android:id="@+id/action_navigation_dashboard_to_userDetailFragment"
            app:destination="@id/userDetailFragment"
            app:enterAnim="@anim/anim_enter"
            app:exitAnim="@anim/anim_exit"
            app:popEnterAnim="@anim/anim_popenter"
            app:popExitAnim="@anim/anim_popexit"  />
    </fragment>

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.android.baseapp.ui.fragment.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" >
        <action
            android:id="@+id/action_navigation_notifications_to_userDetailFragment"
            app:destination="@id/userDetailFragment"
            app:enterAnim="@anim/anim_enter"
            app:exitAnim="@anim/anim_exit"
            app:popEnterAnim="@anim/anim_popenter"
            app:popExitAnim="@anim/anim_popexit"  />
    </fragment>
    <fragment
        android:id="@+id/userDetailFragment"
        android:name="com.android.baseapp.ui.fragment.userdetail.UserDetailFragment"
        android:label="UserDetailFragment"
        tools:layout="@layout/fragment_user_detail"/>
</navigation>